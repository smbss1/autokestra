{
  "name": "@autokestra/cli",
  "version": "0.0.1",
  "description": "Command-line interface",
  "main": "index.ts",
  "bin": {
    "workflow": "src/cli.ts",
    "autokestra": "src/cli.ts",
    "cli": "src/cli.ts"
  },
  "scripts": {
