    "format": "bunx prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@autokestra/engine": "workspace:*",
    "@autokestra/server": "workspace:*",
    "commander": "^12.0.0",
    "valibot": "^1.2.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  }
}